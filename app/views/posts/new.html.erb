<% if user_signed_in? %>
  Logged in user: <%= current_user.email %><br><br>
  <%= button_to 'Sign out', destroy_user_session_path, method: :delete %><br><br>
<% else %>
  <%= link_to 'Sign in', new_user_session_path %><br><br>
<% end %>

<%= form_with model: [ @user, @user.posts.build ] do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %><br><br>
  <%= form.label :body %>
  <%= form.text_area :body %><br><br>
  <%= form.submit 'Create' %>
<% end %>